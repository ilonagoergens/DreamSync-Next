{
    "env": {
      "node": true,
      "es2021": true
    },
    "extends": ["eslint:recommended"],
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "rules": {
      "no-unused-vars": "warn",
      "no-undef": "error",
      "no-unreachable": "warn"
    },
    "globals": {
      "process": "readonly",
      "__dirname": "readonly"
    }
  }
  